# vi:syntax=bash
# If not running interactively, don't do anything

case $- in
    *i*) ;;
      *) return;;
esac

HISTCONTROL=ignoreboth

shell_options=(histappend cmdhist dirspell checkwinsize checkhash globstar)
for opt in ${shell_options}; do
	shopt -s $opt
done

eval "$(lesspipe)"
eval "$(dircolors -b)"

export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'

# this file must be called mycompletion due to ubuntu trying to search for
# .bash_completion when loading
source $HOME/.bash_mycompletion
source $HOME/.bash_aliases
source $HOME/.bash_ps1
export PS1="$Green$UserName@$HostName:$Blue$Directory$EndColour\$ "
export PATH=$HOME/bin:$PATH

EDITOR=vim
